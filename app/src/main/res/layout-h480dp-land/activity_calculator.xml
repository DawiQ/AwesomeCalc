<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:padding="5dp"
    tools:context=".Calculator">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="numberDecimal"
        android:scrollHorizontally="true"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="MC"
                android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="M+"
                android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="M-"
                android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="MR" android:textColor="@color/colorOfButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="C" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="+-" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="/" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="X" android:textColor="@color/colorOfButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button18"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="7" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button19"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="8" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="9" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="-" android:textColor="@color/colorOfButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button22"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="4" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button23"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="5" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button24"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="6" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button25"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#3C3C3C"
                android:text="+" android:textColor="@color/colorOfButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button26"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="1" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button27"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="2" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button28"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="3" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button29"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ff8c1a"
                android:text="=" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button30"
                android:layout_width="273dp"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:scrollHorizontally="true"
                android:text="0" android:textColor="@color/colorOfButton" />

            <Button
                android:id="@+id/button31"
                android:layout_width="273dp"
                android:layout_height="@dimen/heightOfButton"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#24272B"
                android:text="." android:textColor="@color/colorOfButton" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>